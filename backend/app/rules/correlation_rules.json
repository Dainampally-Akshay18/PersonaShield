      "severity": 7,
      "condition": {
        "required_fields": ["job_title", "skills", "certifications"]
      },
      "pathway": ["job_title", "skills", "certifications"]
    },
    {
      "rule_id": "GOVERNMENT_ID_RISK",
      "risk_type": "Government ID Reconstruction Risk",
