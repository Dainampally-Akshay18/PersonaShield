      },
      "pathway": ["certifications", "company", "job_title"]
    },
    {
      "rule_id": "FULL_CAREER_TRAJECTORY",
      "risk_type": "Career Trajectory Exposure",
      "description": "Complete career path exposed",
      "severity": 8,
      "condition": {
        "required_fields": ["college", "graduation_year", "company", "job_title", "skills"]
