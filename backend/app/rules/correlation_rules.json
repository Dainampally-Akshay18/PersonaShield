{
  "correlation_rules": [
    {
      "rule_id": "PERSONAL_IDENTITY_RISK",
      "risk_type": "Personal Identity Exposure",
      "description": "Personal identity exposure through multiple contact methods and DOB",
      "severity": 9,
      "condition": {
        "required_fields": ["emails", "phones", "dob"]
      },
      "pathway": ["dob", "emails", "phones"]
    },
    {
      "rule_id": "PROFESSIONAL_BACKGROUND_RISK",
      "risk_type": "Professional Background Exposure",
      "description": "Complete professional profile exposure",
      "severity": 8,
      "condition": {
        "required_fields": ["college", "graduation_year", "company", "job_title"]
      },
      "pathway": ["college", "graduation_year", "company", "job_title"]
    },
    {
      "rule_id": "FAMILY_CONTACT_LEAK",
      "risk_type": "Family Information Leak",
      "description": "Family information linked with contact details",
      "severity": 7,
      "condition": {
        "required_fields": ["family_mentions", "emails"]
      },
      "pathway": ["family_mentions", "emails"]
    },
    {
